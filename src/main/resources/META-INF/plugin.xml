<idea-plugin>
    <!-- plugin 唯一 id -->
    <id>com.neko233.jetbrains-plugin.my-terminal</id>

    <name>My-Terminal</name>

    <vendor email="1417015340@qq.com" url="https://www.neko233.com">luohaojun</vendor>

    <!--  插件描述，这里一般是写插件的功能介绍啥的 -->
    <description><![CDATA[
      MyTerminal233
      A tool to quickly reuse your Windows/Linux commands!
      And Store in a json file named 'my-terminal.json'

        And record your commands locally and use your git to automatically maintain your project shortcut commands!

      一款快速复用你的 Windows/Linux 命令的工具!
      并且在本地记录你的命令, 使用你的 git 来自动维护你的项目快捷命令!
    ]]>
    </description>


    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>com.intellij.modules.xdebugger</depends>


    <extensions defaultExtensionNs="com.intellij">

        <toolWindow id="MyTerminal233"
                    anchor="bottom"
                    factoryClass="com.neko233.ide.myterminal.window.MyTerminalWindow"
                    secondary="true"
                    icon="com.neko233.ide.myterminal.icon.MyIcons.MyTerminal"
        />


    </extensions>


